<main>

<% if @user.errors %>
   <ul>
  <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
  <% end %>
    </ul>
<% end %>

    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
      <%= form_with model: @user,url: user_path(@user.id), method: :patch do |f| %>

        <h5>Name</h5>
        <%= f.text_field :name, class: 'form-control' %>

        <h5>Image</h5>
        <%= f.file_field :profile_image, class: 'form-control-file user_image' %>

        <h5>Introduction</h5>
        <%= f.text_area :introduction, class: 'form-control' %>

        <br>

        <%= f.submit 'Update User', class: 'btn btn-secondary' %>

      <% end %>

          </div>
      </div>
    </div>
</main>